{
  "compilerOptions": {
    /* === Output Settings === */
    "outDir": "./dist",                    // compiled JS output folder
    "rootDir": "./src",                    // where your .ts files are
    "target": "ES2020",                    // JS version to compile to
    "module": "commonjs",                  // Node uses CommonJS modules
    "moduleResolution": "node",            // how modules are resolved
    "esModuleInterop": true,               // allows default imports from CJS
    "allowSyntheticDefaultImports": true,  // allows import express from 'express'
    "resolveJsonModule": true,             // allow importing .json files
    "skipLibCheck": true,                  // skip type checking of libs
    "forceConsistentCasingInFileNames": true,
    
    /* === Type Checking === */
    "strict": true,                        // enable all strict checks
    "noImplicitAny": false,                // allow variables without types (optional)
    "strictNullChecks": true,
    
    /* === Source Maps (Optional for Debugging) === */
    "sourceMap": true,
    
    /* === Other Useful Options === */
    "isolatedModules": true,
    "noEmitOnError": false,
    "types": ["node"],                 // still emit JS even if type errors exist
  },
  "include": ["src/**/*"],                      // files to compile
  "exclude": ["node_modules", "dist"]      // skip these folders
}
